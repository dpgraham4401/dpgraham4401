{
  "extends": ["astro/tsconfigs/strict"],
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "allowJs": true,
    "strict": false,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "paths": {
      "@components/*": ["src/components/*"],
      "@/*": ["src/*"]
    },
  }
}
---
import Section from "@components/common/Section.vue";
import Prose from "src/components/Prose.vue";
import Layout from "./Layout.astro";

type Props = {
  title: string;
  readTime?: number;
  timestamp?: Date;
}

const { title, readTime, timestamp } = Astro.props;
---

<Layout>
  <Fragment slot="head">
    <meta name="twitter:card" content="summary_large_image" />
    <meta http-equiv="content-language" content="en" />
    <meta name="language" content="English" />
    <slot name="head" />
  </Fragment>
  <Section class="pt-8">
    <div class="flex flex-col gap-4 mt-8 mb-16">
      <h1
        class="text-3xl sm:text-4xl leading-normal sm:leading-normal font-display"
      >
        {title}
      </h1>
      <div class="flex justify-between">
        <span>
        {timestamp && timestamp.toLocaleDateString()}
        </span>
        <span>{readTime && `${readTime} minutes`}</span>
      </div>
    </div>
    <Prose>
      <slot />
    </Prose>
  </Section>
</Layout>
